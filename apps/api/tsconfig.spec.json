{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "types": ["jest", "node"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "isolatedModules": true
  },
  "include": [
    "jest.config.ts",
    "jest.integration.config.ts",
    "jest.all.config.ts",
    "jest.e2e.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "test/**/*.ts"
  ]
}
