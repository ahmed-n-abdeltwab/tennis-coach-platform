{
  "name": "api",
  "version": "0.0.1",
  "scripts": {
    "db:generate": "npx prisma generate --config ./prisma/prisma.config.ts",
    "db:migrate": "npx prisma migrate dev --config ./prisma/prisma.config.ts",
    "db:studio": "npx prisma studio --config ./prisma/prisma.config.ts",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:test": "DATABASE_URL=postgresql://postgres:password@localhost:5433/tennis_coach_test?schema=public tsx prisma/seed.ts",
    "db:reset": "npx prisma migrate reset --config ./prisma/prisma.config.ts --force --skip-generate --skip-seed",
    "test": "jest --config jest.unit.config.ts",
    "test:unit": "jest --config jest.unit.config.ts",
    "test:integration": "jest --config jest.integration.config.ts",
    "test:e2e": "jest --config jest.e2e.config.ts",
    "test:all": "jest --config jest.all.config.ts",
    "test:all-sequential": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "jest --config jest.unit.config.ts --watch",
    "test:coverage": "jest --config jest.unit.config.ts --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config jest.unit.config.ts --runInBand",
    "test:ci": "jest --config jest.all.config.ts --coverage --ci --watchAll=false --passWithNoTests",
    "test:report": "npm run test:coverage:all && npm run test:report:open",
    "test:report:open": "open ../../coverage/apps/api/all/lcov-report/index.html || xdg-open ../../coverage/apps/api/all/lcov-report/index.html || start ../../coverage/apps/api/all/lcov-report/index.html"
  }
}
