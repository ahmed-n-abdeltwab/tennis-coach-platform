// ========================= //
// Prisma Schema
// ========================= //

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================= //
// ENUMS
// ========================= //

enum UserRole {
  USER
  PREMIUM_USER
}

enum AdminRole {
  ADMIN
  COACH
}

// ========================= //
// MODELS
// ========================= //

model User {
  id           String @id @default(cuid())
  email        String @unique
  name         String
  passwordHash String

  // Profile details
  gender          String?
  age             Int?
  height          Float?
  weight          Float?
  disability      Boolean @default(false)
  disabilityCause String? // Required only if disability = true
  country         String?
  address         String?
  notes           String?

  // State
  role      UserRole @default(USER)
  isActive  Boolean  @default(true)
  isOnline  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sessions         Session[]
  sentMessages     Message[]      @relation("MessageSender")
  receivedMessages Message[]      @relation("MessageReceiver")
  refreshTokens    RefreshToken[]

  @@index([email])
  @@map("users")
}

model Coach {
  id           String  @id @default(cuid())
  email        String  @unique
  name         String
  passwordHash String
  isAdmin      Boolean @default(true)

  // Profile details
  bio          String?
  credentials  String?
  philosophy   String?
  profileImage String?

  // State
  role      AdminRole @default(COACH)
  isActive  Boolean   @default(true)
  isOnline  Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  bookingTypes     BookingType[]
  timeSlots        TimeSlot[]
  sessions         Session[]
  discounts        Discount[]
  sentMessages     Message[]      @relation("CoachMessageSender")
  receivedMessages Message[]      @relation("CoachMessageReceiver")
  refreshTokens    RefreshToken[]

  @@index([email])
  @@map("coaches")
}

model BookingType {
  id          String   @id @default(cuid())
  name        String
  description String?
  basePrice   Decimal  @db.Decimal(10, 2)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  coach    Coach     @relation(fields: [coachId], references: [id], onDelete: Cascade)
  coachId  String
  sessions Session[]

  @@index([coachId])
  @@map("booking_types")
}

model TimeSlot {
  id          String   @id @default(cuid())
  dateTime    DateTime
  durationMin Int      @default(60)
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  coach    Coach     @relation(fields: [coachId], references: [id], onDelete: Cascade)
  coachId  String
  sessions Session[]

  @@index([coachId])
  @@map("time_slots")
}

model Session {
  id              String   @id @default(cuid())
  dateTime        DateTime
  durationMin     Int      @default(60)
  price           Decimal  @db.Decimal(10, 2)
  isPaid          Boolean  @default(false)
  status          String   @default("scheduled")
  notes           String?
  paymentId       String?
  discountCode    String?
  calendarEventId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  coach         Coach       @relation(fields: [coachId], references: [id])
  coachId       String
  bookingType   BookingType @relation(fields: [bookingTypeId], references: [id])
  bookingTypeId String
  timeSlot      TimeSlot    @relation(fields: [timeSlotId], references: [id])
  timeSlotId    String
  discount      Discount?   @relation(fields: [discountId], references: [id])
  discountId    String?
  messages      Message[]

  @@index([userId])
  @@index([coachId])
  @@map("sessions")
}

model Discount {
  id        String   @id @default(cuid())
  code      String   @unique
  amount    Decimal  @db.Decimal(10, 2)
  expiry    DateTime
  useCount  Int      @default(0)
  maxUsage  Int      @default(1)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  coach    Coach     @relation(fields: [coachId], references: [id], onDelete: Cascade)
  coachId  String
  sessions Session[]

  @@index([coachId])
  @@map("discounts")
}

model Message {
  id           String   @id @default(cuid())
  content      String
  sentAt       DateTime @default(now())
  senderType   String
  receiverType String

  // Polymorphic foreign keys
  senderUserId    String?
  senderCoachId   String?
  receiverUserId  String?
  receiverCoachId String?

  sessionId String?

  // Relations
  senderUser    User?    @relation("MessageSender", fields: [senderUserId], references: [id])
  senderCoach   Coach?   @relation("CoachMessageSender", fields: [senderCoachId], references: [id])
  receiverUser  User?    @relation("MessageReceiver", fields: [receiverUserId], references: [id])
  receiverCoach Coach?   @relation("CoachMessageReceiver", fields: [receiverCoachId], references: [id])
  session       Session? @relation(fields: [sessionId], references: [id])

  @@index([sessionId])
  @@map("messages")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String?
  coachId   String?
  expiresAt DateTime
  createdAt DateTime @default(now())

  user  User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
  coach Coach? @relation(fields: [coachId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([coachId])
  @@map("refresh_tokens")
}
