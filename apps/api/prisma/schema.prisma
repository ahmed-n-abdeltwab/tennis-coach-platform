// ========================= //
// Prisma Schema
// ========================= //

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================= //
// ENUMS
// ========================= //

enum Role {
  USER
  PREMIUM_USER
  ADMIN
  COACH
}

// ========================= //
// MODELS
// ========================= //
model Account {
  id           String @id @default(cuid())
  email        String @unique
  name         String
  passwordHash String

  // Profile details
  gender          String?
  age             Int?
  height          Float?
  weight          Float?
  bio             String?
  credentials     String?
  philosophy      String?
  profileImage    String?
  disability      Boolean @default(false)
  disabilityCause String?
  country         String?
  address         String?
  notes           String?

  // State
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  isOnline  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  bookingTypes     BookingType[]
  timeSlots        TimeSlot[]
  sessionsAsUser   Session[]      @relation("UserSessions")
  sessionsAsCoach  Session[]      @relation("CoachSessions")
  discounts        Discount[]
  sentMessages     Message[]      @relation("AccountMessageSender")
  receivedMessages Message[]      @relation("AccountMessageReceiver")
  refreshTokens    RefreshToken[]

  @@index([email])
  @@map("accounts")
}

model BookingType {
  id          String   @id @default(cuid())
  name        String
  description String?
  basePrice   Decimal  @db.Decimal(10, 2)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  coach   Account @relation(fields: [coachId], references: [id], onDelete: Cascade)
  coachId String

  sessions Session[]

  @@index([coachId])
  @@map("booking_types")
}

model TimeSlot {
  id          String   @id @default(cuid())
  dateTime    DateTime
  durationMin Int      @default(60)
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  coach   Account @relation(fields: [coachId], references: [id], onDelete: Cascade)
  coachId String

  sessions Session[]

  @@index([coachId])
  @@map("time_slots")
}

model Session {
  id              String   @id @default(cuid())
  dateTime        DateTime
  durationMin     Int      @default(60)
  price           Decimal  @db.Decimal(10, 2)
  isPaid          Boolean  @default(false)
  status          String   @default("scheduled")
  notes           String?
  paymentId       String?
  discountCode    String?
  calendarEventId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  userId        String
  coachId       String
  bookingTypeId String
  timeSlotId    String
  discountId    String?

  user        Account     @relation("UserSessions", fields: [userId], references: [id])
  coach       Account     @relation("CoachSessions", fields: [coachId], references: [id])
  bookingType BookingType @relation(fields: [bookingTypeId], references: [id])
  timeSlot    TimeSlot    @relation(fields: [timeSlotId], references: [id])
  discount    Discount?   @relation(fields: [discountId], references: [id])
  messages    Message[]

  @@index([userId])
  @@index([coachId])
  @@map("sessions")
}

model Discount {
  id        String   @id @default(cuid())
  code      String   @unique
  amount    Decimal  @db.Decimal(10, 2)
  expiry    DateTime
  useCount  Int      @default(0)
  maxUsage  Int      @default(1)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  coach   Account @relation(fields: [coachId], references: [id], onDelete: Cascade)
  coachId String

  sessions Session[]

  @@index([coachId])
  @@map("discounts")
}

model Message {
  id           String   @id @default(cuid())
  content      String
  sentAt       DateTime @default(now())
  senderId     String
  receiverId   String
  sessionId    String?
  senderType   String
  receiverType String

  sender   Account  @relation("AccountMessageSender", fields: [senderId], references: [id])
  receiver Account  @relation("AccountMessageReceiver", fields: [receiverId], references: [id])
  session  Session? @relation(fields: [sessionId], references: [id])

  @@index([sessionId])
  @@map("messages")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  accountId String
  expiresAt DateTime
  createdAt DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([accountId])
  @@map("refresh_tokens")
}
