{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // NestJS requires CommonJS
    "module": "CommonJS",
    "moduleResolution": "Node10",

    // Node.js environment
    "lib": ["ES2023"],
    "types": ["node"],

    // NestJS decorators
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // API-specific paths
    "baseUrl": ".",
    "paths": {
      "@routes-helpers": ["../../libs/routes-helpers/src/index.ts"],
      "@utils": ["../../libs/utils/src/index.ts"],
      "@api/*": ["src/app/*"],
      "@common": ["src/common/index.ts"],
      "@common/*": ["src/common/*"],
      "@config": ["src/config/index.ts"],
      "@config/*": ["src/config/*"],
      "@test-utils": ["./test/utils/index"],
      "@test/*": ["test/*"]
    }
  },
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.spec.json" },
    { "path": "../../libs/routes-helpers" },
    { "path": "../../libs/utils" }
  ]
}
