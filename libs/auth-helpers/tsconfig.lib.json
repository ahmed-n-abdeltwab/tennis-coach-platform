{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // CommonJS for maximum compatibility
    "module": "CommonJS",
    "moduleResolution": "Node10",

    // Library output
    "outDir": "../../dist/libs/auth-helpers",
    "rootDir": ".",

    // Composite project
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "../../dist/libs/auth-helpers/.tsbuildinfo",

    // Node environment
    "lib": ["ES2023"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "**/__tests__/**"],
  "references": [{ "path": "../routes-helpers/tsconfig.lib.json" }, { "path": "../utils/tsconfig.lib.json" }]
}
