{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "types": ["jest", "node"],
    "noEmit": true,

    // Relax for tests
    "strictPropertyInitialization": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*.spec.ts", "src/**/*.test.ts", "jest.config.ts", "test/**/*.ts"]
}
