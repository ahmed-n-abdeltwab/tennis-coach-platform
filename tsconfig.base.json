{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es2023", "dom"],
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "importHelpers": true,
    "paths": {
      "@workspace/*": ["*"],
      "@apps/*": ["apps/*"],
      "@docs/*": ["docs/*"],
      "@scripts/*": ["scripts/*"],
      "@tests/*": ["tests/*"],
      "@k8s/*": ["k8s/*"],
      "@auth-helpers/*": ["libs/auth-helpers/*"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"]
}
