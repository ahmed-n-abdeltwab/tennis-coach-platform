{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es2023", "dom"],
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "importHelpers": true,
    "paths": {
      "@workspace/*": ["*"],
      "/*": ["*"],
      // Documentation
      "@docs/*": ["docs/*"],

      "@scripts/*": ["scripts/*"],

      "@k8s/*": ["k8s/*"],

      // Libs
      "@auth-helpers": ["libs/auth-helpers/index"],
      "@auth-helpers/*": ["libs/auth-helpers/*"],

      // Applications
      "@apps/*": ["apps/*"],

      // Api
      "@app/*": ["apps/api/src/app/*"],
      // Common
      "@common": ["apps/api/src/common/index"],
      "@common/*": ["apps/api/src/common/*"],
      // Configurations
      "@config": ["apps/api/src/config/index"],
      "@config/*": ["apps/api/src/config/*"],
      // Tests
      "@test-utils/*": ["apps/api/test/utils/*"],
      "@test/*": ["apps/api/test/*"]
    }
  },
  "exclude": ["node_modules", "tmp", "test-reports"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"]
}
