{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es2023", "dom"],
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "importHelpers": true,
    "paths": {
      // Shared workspace paths (available to all projects)
      "@apps": ["apps/*"],
      "@auth-helpers": ["libs/auth-helpers/src/index"],
      "@docs": ["docs/*"],
      "@k8s": ["k8s/*"],
      "@libs": ["libs/*"],
      "@routes-helpers": ["libs/routes-helpers/src/index"],
      "@scripts": ["scripts/*"],
      "@utils": ["libs/utils/src/index"],
      "@workspace": ["*"],
      // API-specific paths (used by apps/api only, but defined in base for inheritance)
      "@api/*": ["apps/api/src/app/*"],
      "@common": ["apps/api/src/common/index"],
      "@common/*": ["apps/api/src/common/*"],
      "@config": ["apps/api/src/config/index"],
      "@config/*": ["apps/api/src/config/*"],
      "@test-utils/*": ["apps/api/test/utils/*"],
      "@test/*": ["apps/api/test/*"]
    }
  },
  "exclude": ["node_modules", "tmp", "test-reports"]
}
