{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es2023", "dom"],
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "importHelpers": true,
    "paths": {
      "@apps/*": ["apps/*"],
      "@auth-helpers": ["libs/auth-helpers/index"],
      "@auth-helpers/*": ["libs/auth-helpers/*"],
      "@docs/*": ["docs/*"],
      "@k8s/*": ["k8s/*"],
      "@libs/*": ["libs/*"],
      "@routes-helpers": ["libs/routes-helpers/index"],
      "@routes-helpers/*": ["libs/routes-helpers/*"],
      "@scripts/*": ["scripts/*"],
      "@utils": ["libs/utils/index"],
      "@utils/*": ["libs/utils/*"],
      "@workspace/*": ["*"],
      "utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "test-reports"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"]
}
