    "@jest/reporters": "^30.2.0",
    "@jest/test-result": "^30.2.0",
    "@jest/test-sequencer": "^30.2.0",
    "@jest/types": "^30.2.0",
    "@nestjs/testing": "^11.1.6",
    "@nx/eslint": "22.1.1",
    "@nx/eslint-plugin": "22.0.2",
    "@nx/jest": "22.0.2",
    "@nx/js": "22.0.2",
    "@nx/nest": "22.0.2",
    "@nx/node": "22.0.2",
    "@nx/react": "22.0.2",
    "@nx/vite": "22.0.2",
