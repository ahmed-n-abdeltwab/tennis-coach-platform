{
  "name": "tennis-coach-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Tennis Coach Booking and Management Platform Monorepo",
  "keywords": [
    "nestjs",
    "react",
    "prisma",
    "typescript",
    "monorepo",
    "coaching",
    "booking"
  ],
  "author": {
    "name": "Ahmed Nasser",
    "email": "ahmed.n.abdeltwab@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmed-n-abdeltwab/tennis-coach-platform.git"
  },
  "bugs": {
    "url": "https://github.com/ahmed-n-abdeltwab/tennis-coach-platform/issues"
  },
  "homepage": "https://github.com/ahmed-n-abdeltwab/tennis-coach-platform#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "@comment:scripts": "Grouped and standardized developer lifecycle scripts.",
  "scripts": {
    "@comment:dev": "Development and build scripts (Nx monorepo).",
    "dev": "nx run-many --target=serve --projects=api,web --parallel",
    "dev:api": "nx serve api",
    "dev:web": "nx serve web",
    "build": "nx run-many --target=build --projects=api,web",
    "build:api": "nx build api",
    "build:web": "nx build web",
    "@comment:database": "Database lifecycle commands using Prisma and TypeScript execution.",
    "db:generate": "dotenv -e .env -- prisma generate --schema=./apps/api/prisma/schema.prisma --config=./apps/api/prisma/prisma.config.ts",
    "db:migrate": "dotenv -e .env -- prisma migrate dev --schema=./apps/api/prisma/schema.prisma --config=./apps/api/prisma/prisma.config.ts",
    "db:migrate:deploy": "dotenv -e .env -- prisma migrate deploy --schema=./apps/api/prisma/schema.prisma --config=./apps/api/prisma/prisma.config.ts",
    "db:seed": "dotenv -e .env -- tsx apps/api/prisma/seed.ts",
    "db:reset": "dotenv -e .env -- prisma migrate reset --force --skip-seed --schema=./apps/api/prisma/schema.prisma --config=./apps/api/prisma/prisma.config.ts",
    "db:studio": "dotenv -e .env -- prisma studio --schema=./apps/api/prisma/schema.prisma --config=./apps/api/prisma/prisma.config.ts",
    "@comment:testing": "Centralized testing configuration powered by Nx and Jest.",
    "test": "nx run-many --target=test --all",
    "test:watch": "nx run-many --target=test --all --watch",
    "test:coverage": "nx run-many --target=test --all --coverage",
    "test:db:setup": "psql $DATABASE_URL -c 'CREATE DATABASE tennis_coach_test;' || true && psql $DATABASE_URL -c 'CREATE DATABASE tennis_coach_test_integration;' || true && psql $DATABASE_URL -c 'CREATE DATABASE tennis_coach_test_e2e;' || true && DATABASE_URL=postgresql://postgres:password@localhost:5432/tennis_coach_test pnpm db:migrate:deploy && DATABASE_URL=postgresql://postgres:password@localhost:5432/tennis_coach_test_integration pnpm db:migrate:deploy && DATABASE_URL=postgresql://postgres:password@localhost:5432/tennis_coach_test_e2e pnpm db:migrate:deploy",
    "@comment:lint-format": "Linting, formatting, and code quality tools.",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "@comment:docker-dev": "Docker environment controls for smooth local development.",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d --build",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d --build",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "docker:logs": "docker compose logs -f",
    "@comment:setup": "Automate local setup across containers and migrations.",
    "setup": "pnpm install && pnpm docker:dev && pnpm db:migrate && pnpm db:seed",
    "@comment:maintenance": "DevOps and CI/CD housekeeping scripts.",
    "clean": "nx reset && rm -rf node_modules dist coverage .nx",
    "type-check": "nx run-many --target=type-check --all",
    "prepare": "husky install",
    "commit": "git-cz",
    "release": "standard-version",
    "security:audit": "pnpm audit --prod",
    "security:fix": "pnpm audit --fix",
    "deps:update": "pnpm update --interactive --latest",
    "deps:check": "pnpm outdated"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/websockets": "^11.1.9",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@prisma/config": "^7.1.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.2.1",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "mailtrap": "^4.3.0",
    "ms": "^2.1.3",
    "nodemailer": "^7.0.9",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "prisma": "^7.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "reflect-metadata": "^0.2.2",
