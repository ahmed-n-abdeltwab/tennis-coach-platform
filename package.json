{
  "name": "tennis-coach-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Tennis Coach Booking and Management Platform Monorepo",
  "keywords": [
    "tennis",
    "coaching",
    "booking",
    "nestjs",
    "react",
    "typescript",
    "monorepo"
  ],
  "author": {
    "name": "Ahmed Nasser",
    "email": "ahmed.n.abdeltwab@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmed-n-abdeltwab/tennis-coach-platform.git"
  },
  "bugs": {
    "url": "https://github.com/ahmed-n-abdeltwab/tennis-coach-platform/issues"
  },
  "homepage": "https://github.com/ahmed-n-abdeltwab/tennis-coach-platform#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "nx build",
    "build:api": "nx build api",
    "build:web": "nx build web",
    "dev": "nx run-many --target=serve --projects=api,web --parallel",
    "dev:api": "nx serve api",
    "dev:web": "nx serve web",
    "test": "nx run-many --target=test --all",
    "test:watch": "nx run-many --target=test --all --watch",
    "test:coverage": "nx run-many --target=test --all --coverage",
    "test:e2e": "testcafe chrome:headless tests/e2e --reporter spec",
    "test:e2e:dev": "testcafe chrome tests/e2e --reporter spec --live",
    "test:e2e:ci": "testcafe chrome:headless tests/e2e --reporter spec,json:reports/testcafe-results.json",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "nx run-many --target=type-check --all",
    "db:migrate": "prisma migrate dev --schema apps/api/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema apps/api/prisma/schema.prisma",
    "db:seed": "prisma db seed --schema apps/api/prisma/schema.prisma",
    "db:studio": "prisma studio --schema apps/api/prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema apps/api/prisma/schema.prisma",
    "db:generate": "prisma generate --schema apps/api/prisma/schema.prisma",
    "db:backup": "scripts/backup.sh",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:build": "docker compose -f docker-compose.prod.yml build",
    "setup": "pnpm install && pnpm docker:dev && sleep 10 && pnpm db:migrate && pnpm db:seed",
    "start": "pnpm docker:dev && pnpm dev",
    "start:prod": "pnpm docker:prod",
    "clean": "nx reset && rm -rf node_modules dist coverage .nx",
    "clean:cache": "nx reset",
    "prepare": "husky install",
    "commit": "git-cz",
    "release": "standard-version",
    "security:audit": "pnpm audit --prod",
    "security:fix": "pnpm audit --fix",
    "deps:update": "pnpm update --interactive --latest",
    "deps:check": "pnpm outdated"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^11.1.6",
    "@prisma/client": "^6.17.1",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "mailtrap": "^4.3.0",
    "ms": "^2.1.3",
    "nodemailer": "^7.0.9",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.17.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@nx/eslint": "21.6.4",
    "@nx/eslint-plugin": "21.6.4",
    "@nx/jest": "21.6.4",
    "@nx/nest": "21.6.4",
    "@nx/node": "21.6.4",
    "@nx/react": "21.6.4",
    "@nx/vite": "21.6.4",
    "@nx/webpack": "21.6.4",
    "@nx/workspace": "21.6.4",
    "@swc/helpers": "0.5.17",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.7.2",
    "@types/nodemailer": "^7.0.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.4",
    "nx": "21.6.4",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "standard-version": "^9.5.0",
    "testcafe": "^3.7.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.prisma": [
      "prisma format"
    ]
  },
  "standard-version": {
    "scripts": {
      "prebump": "pnpm test",
      "precommit": "git add CHANGELOG.md"
    }
  },
  "nx": {
    "includedScripts": []
  }
}
