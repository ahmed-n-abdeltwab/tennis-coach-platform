  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.prisma": [
      "prisma format"
    ]
  },
  "standard-version": {
    "scripts": {
      "prebump": "pnpm test",
      "precommit": "git add CHANGELOG.md"
    }
  },
  "nx": {
    "includedScripts": []
  },
  "prisma": {
    "seed": "tsx apps/api/prisma/seed.ts",
    "schema": "./apps/api/prisma/schema.prisma",
    "config": "apps/api/prisma/prisma.config.ts"
  },
  "pnpm": {
    "overrides": {
      "hono": ">=4.10.2",
      "valibot": ">=1.2.0",
      "jws": ">=4.0.1",
      "validator": ">=13.15.22"
